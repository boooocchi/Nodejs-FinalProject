{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "next.config.js",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "index.html" }
  ],
  "env": {
    "DATABASE_URL": "$DATABASE_URL"
  },
  "build": {
    "env": {
      "DATABASE_URL": "$DATABASE_URL"
    },
    "scripts": {
      "prebuild": "npx prisma generate"
    },
    "command": "npm run build"
  }
}
